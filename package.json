{
  "name": "the-chronicler",
  "version": "0.3.0",
  "private": false,
  "description": "A CLI for auto updating a [Keep a Changelog](https://keepachangelog.com/en/1.0.0/) changelog for a given release.",
  "repository": "https://github.com/Renddslow/the-chronicler",
  "license": "MIT",
  "author": "Matt McElwee <mubatt@wyopub.com>",
  "main": "dist/index.js",
  "bin": {
    "the-chronicler": "dist/index.js"
  },
  "scripts": {
    "prestart": "yarn build",
    "start": "node dist/index.js",
    "build": "node build.cjs",
    "prepare": "husky install",
    "test": "ava",
    "coverage": "nyc ava"
  },
  "chronicler": {
    "linkPattern": "https://github.com/Renddslow/the-chronicler/compare/{{prev}}...{{next}}"
  },
  "type": "module",
  "lint-staged": {
    "*.{js,json,md,ts,cjs}": [
      "prettier --write"
    ]
  },
  "prettier": "@dmsi/prettier-config",
  "ava": {
    "concurrency": 4,
    "files": [
      "src/**/*.test.ts"
    ],
    "timeout": "1m",
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--experimental-specifier-resolution=node"
    ]
  },
  "devDependencies": {
    "@dmsi/prettier-config": "^1.3.0",
    "@types/node": "^17.0.21",
    "@types/semver": "^7.3.9",
    "ava": "^4.0.1",
    "esbuild": "^0.14.23",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "mri": "^1.2.0",
    "nyc": "^15.1.0",
    "prettier": "^2.5.1",
    "ts-node": "^10.6.0",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "cosmiconfig": "^7.0.1",
    "kleur": "^4.1.4",
    "klona": "^2.0.5",
    "remark-parse": "^10.0.1",
    "remark-stringify": "^10.0.2",
    "sade": "^1.8.1",
    "semver": "^7.3.5",
    "templite": "^1.2.0",
    "unified": "^10.1.1",
    "unist-builder": "^3.0.0",
    "unist-util-visit": "^4.1.0"
  }
}
