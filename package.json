{
	"name": "the-chronicler",
	"version": "0.1.0",
	"private": false,
	"description": "A CLI for auto updating a [Keep a Changelog](https://keepachangelog.com/en/1.0.0/) changelog for a given release.",
	"repository": "https://github.com/Renddslow/the-chronicler",
	"license": "MIT",
	"author": "Matt McElwee <mubatt@wyopub.com>",
	"main": "dist/index.js",
	"scripts": {},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,css,json,md,ts,tsx}": [
			"prettier --write"
		]
	},
	"prettier": "@dmsi/prettier-config",
	"ava": {
		"babel": false,
		"compileEnhancements": false,
		"concurrency": 4,
		"extensions": [
			"ts"
		],
		"files": [
			"src/**/*.test.ts"
		],
		"require": [
			"ts-node/register"
		],
		"timeout": "1m"
	},
	"devDependencies": {
		"@dmsi/prettier-config": "^1.3.0",
		"@types/node": "^17.0.21",
		"ava": "^4.0.1",
		"husky": "^7.0.4",
		"lint-staged": "^12.3.4",
		"prettier": "^2.5.1",
		"ts-node": "^10.6.0",
		"typescript": "^4.6.2"
	}
}
